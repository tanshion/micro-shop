# 开发组IDE 编辑器标准
root = true

[*.{adoc, bat, groovy, html, java, js, jsp, kt, kts, md, properties, py, rb, sh, sql, svg, txt, xml, xsd}]
charset = utf-8

[*.{groovy, java, kt, kts}]
indent_style = space
indent_size = 4
end_of_line = lf
continuation_indent_size = 4

[**/resources/**/mapper/**.{xml, xsd}]
indent_style = space
indent_size = 2
end_of_line = lf
# trim_trailing_whitespace = true
continuation_indent_size = 2

[*.{js, html}]
indent_style = space
indent_size = 2
end_of_line = lf