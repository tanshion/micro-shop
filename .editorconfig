#开发组IDE编辑器标准
root = true

[*.{adoc,bat,groovy,html,java,js,jsp,kt,kts,md,properties,py,rb,sh,sql,svg,txt,xml,xsd,yml,json}]
charset = utf-8

[*.{groovy,java,kt,kts}]
indent_style = space
indent_size = 4
end_of_line = lf
ij_java_keep_simple_classes_in_one_line = true
ij_java_keep_simple_lambdas_in_one_line = true
ij_java_keep_simple_methods_in_one_line = true
ij_java_line_comment_at_first_column = false

[*.{js,html,json,yml}]
indent_style = space
indent_size = 2
end_of_line = lf